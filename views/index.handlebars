
<div class="logo-title text-center">
  <div class="main-image">
    <img id="logo" src="assets/images/burger.png" alt="burger">
  </div>

  <h1>EAT THE BURGER</h1>
</div>


<div class="container">
  <div class="row">
    <div class="burgers-to-eat col-6 border border-dark bg-info">
      <p class="mt-2">Burgers to Eat!</p>
      <ul>
      {{#each burger}}
        {{#unless devoured}}
          {{> burger/burger-block}}
        {{/unless}}
      {{/each}}
      </ul>
    </div>
    <div class="burgers-eaten col-6 border border-dark bg-dark">
      <p class="mt-2 text-light">Burgers Eaten!</p>
      <ul>
      {{#each burger}}
        {{#if devoured}}
          {{> burger/burger-block2}} 
        {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="text-center mx-auto border border-dark py-1 px-5">
          <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      
      <button type="submit">Add Burger</button>
    </form>
    </div>
  </div>
</div>